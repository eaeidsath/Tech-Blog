<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#postModal">
  Make New Post
</button>

<div class="modal fade" id="postModal" tabindex="-1" aria-labelledby="postModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="postModalLabel">Make a New Post</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="post-form">
        <div class="mb-3">
            <label for="formPostInput" class="form-label">Title</label>
            <input type="text" class="form-control post-title" id="formPostInput" placeholder="Title">
        </div>
        <div class="form-group">
        <label for="post-summary">Post Content</label>
        <textarea
          name="summary"
          class="form-control post-body"
          id="post-summary"
          placeholder="Post Content"
        ></textarea>
        </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button onclick="postFormHandler()" type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>
