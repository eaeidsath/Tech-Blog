<article class="card">
  <div class="card-body post">
    <div class="col-md-5 card-title">
      <h3>
        <a href="/post/{{id}}">{{title}}</a>
      </h3>
      <p class="card-subtitle">Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
    <div class="col-md-7 card-text">
      <p>
        {{post_body}}
      </p>
    </div>
  </div>
</article>