
{{#each posts as |post| }}
<div class="row mb-4 col-md-5 post">
  <div class="">
    <h3>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h3>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="">
    <p>
      {{post.post_body}}
    </p>
  </div>
</div>
{{/each}}
<div>
  <div>
  {{> new-post}}
  </div>
</div>

<script src="./js/new-post.js"></script>